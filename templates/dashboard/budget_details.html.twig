{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('budget') }}
{% endblock %}

{% block body %}
    <div class="container w-75">
        <div class="row">
            <div class="col-sm-9">
                <h2 align="left">Budgets</h2>
            </div>
            <div class="col-sm-2 text-left">
                <button type="button" class="btn btn-primary align-right">Add Budget</button>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-3">
                <div class="card text-center shadow" style="padding: 0; margin: 0;">
                    <div class="card-body">
                        <p align="left">Originally Budgeted</p>
                        <h4 align="left">1000 $</h4>
                    </div>
                </div>
            </div>

            <div class="col-3">
                <div class="card text-center shadow" style="padding: 0; margin: 0;">
                    <div class="card-body">
                        <p align="left">Spent So Far</p>
                        <h4 align="left">1000 $</h4>
                    </div>
                </div>
            </div>

            <div class="col-3">
                <div class="card text-center shadow" style="padding: 0; margin: 0;">
                    <div class="card-body">
                        <p align="left">Money Left</p>
                        <h4 align="left">1000 $</h4>
                    </div>
                </div>
            </div>

            <div class="col-3">
                <div class="card text-center shadow" style="padding: 0; margin: 0;">
                    <div class="card-body">
                        <p align="left">You Can Spend</p>
                        <h4 align="left">1000 $</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('budget') }}
{% endblock %}