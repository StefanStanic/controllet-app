{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard') }}
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 20px;">
        <div class="row">

                {% for account in accounts %}
                    <!--Panel-->
                    <div class="col-md-2">
                        <div class="card card-body" style="padding-bottom: 10px; padding-top: 10px; margin-bottom: 10px;">
                            <h6 class="card-title">{{ account.accountName }}</h6>
                            <p class="card-text">{{ account.accountBalance }} {{ account.currency }}</p>
                        </div>
                    </div>
                    {% if loop.last %}
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary">
                                <a href="{{ path('app_dashboard_addaccount', {'user_id' : app.user.id }) }}" style="text-decoration: none; color: white;" >+ Add Account</a>
                            </button>
                        </div>
                    {% endif %}
                {% endfor %}

        </div>
        <div class="row">
            <div class="col-md-12">

            </div>
        </div>
        <div class="row" style="padding-top: 50px;">
            <div class="col-md-12" style="margin-bottom: 20px;">
                <!--Panel-->
                <div class="card card-body" style="margin-right: 10px;">
                    <h4 class="card-title">
                        Dashboard
                        <hr>
                        <div id="spending_trend"></div>
                    </h4>
                    <p class="card-text"></p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-body" style="margin-right: 10px;">
                    <h4 class="card-title">
                        Income
                        <hr>
                        <div id="chart2"></div>
                    </h4>
                    <p class="card-text"></p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-body" style="margin-right: 10px;">
                    <h4 class="card-title">
                        Expense
                        <hr>
                        <div id="chart3"></div>
                    </h4>
                    <p class="card-text"></p>
                </div>
            </div>
        </div>
    </div>



<!-- Central Modal Small -->
    <div class="modal fade" id="updateAccount" tabindex="-1" role="dialog" aria-labelledby="updateAccount" aria-hidden="true">

        <!-- Change class .modal-sm to change the size of the modal -->
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title w-100" id="myModalLabel">Update Account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addAccountForm" name="account" method="post" action="">
                        <div class="form-group">

                            <label for="accountName">Account Name</label>
                            <input class="form-control" id="accountName" name="accountName" type="text">
                            <br>

                            <label for="accountBalance">Account Balance</label>
                            <input class="form-control" id="accountBalance" name="accountBalance" type="number">
                            <br>

                        </div>
                        <input type="hidden" id="user_id" name="user_id" value="{{ app.user.id }}">
                        <input type="hidden" id="account_id" name="account_id" value="">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="updateAccountModal">Update wallet</button>
                        <br>
                        <br>
                        <p align="center" id="successUpdate" style="display: none; color:green;">Successfully updated your account</p>
                        <p align="center" id="failUpdate" style="display: none;color:red;">There's been an issue, try again later</p>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-sm">Save changes</button>
                </div>
            </div>
        </div>
    </div>
<!-- Central Modal Small -->

<!-- New Account Modal -->
<div class="modal fade" id="addAccount" tabindex="-1" role="dialog" aria-labelledby="addAccount" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="update_accountTitle">Update Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addAccountForm" name="account" method="post" action="">
                    <div class="form-group">

                        <label for="accountName">Account Name</label>
                        <input class="form-control" id="accountName" name="accountName" type="text">
                        <br>

                        <label for="accountBalance">Account Balance</label>
                        <input class="form-control" id="accountBalance" name="accountBalance" type="number">
                        <br>

                    </div>
                    <input type="hidden" id="user_id" name="user_id" value="{{ app.user.id }}">
                    <input type="hidden" id="account_id" name="account_id" value="">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="updateAccountModal">Update wallet</button>
                    <br>
                    <br>
                    <p align="center" id="successUpdate" style="display: none; color:green;">Successfully updated your account</p>
                    <p align="center" id="failUpdate" style="display: none;color:red;">There's been an issue, try again later</p>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
    {{ encore_entry_script_tags('transactions') }}
{% endblock %}