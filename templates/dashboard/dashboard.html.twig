{% extends 'base.html.twig' %}

{% block body %}
    <div class="container w-75">
        <h2 align="center">Accounts</h2><br>
        <div class="row" >
            {% for account in accounts %}
                {% if(account.active == 1) %}
                <div class="col-lg-3">
                    <div class="card text-center">
                        <div class="card-header">
                            <i class="fas fa-money-bill-alt" style="margin-right: 10px"></i><span id="accountType_{{ account.id }}">{{ account.accountType | upper }}</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title" id="accountName_{{ account.id }}">{{ account.accountName }}</h5>
                            <h4 id="accountBalance_{{ account.id }}">{{ account.accountBalance }}  $</h4>
                            <button class="btn btn-warning update_account" data-target="#updateAccount" data-user_id_update="{{ app.user.id }}" value="{{ account.id }}" data-toggle="modal">update</button>
                            <button class="btn btn-danger delete_account"  data-user_id_delete="{{ app.user.id }}" value="{{ account.id }}">delete</button>
                        </div>
                        <div class="card-footer text-muted">
                            {{ account.lastUsedDate | date }}
                        </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}

            <!-- Modal -->
            <div class="modal fade" id="updateAccount" tabindex="-1" role="dialog" aria-labelledby="updateAccount" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="update_accountTitle">Update Account</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="updateAccountForm" name="account" method="post" action="">
                                <div class="form-group">

                                    <label for="accountName">Account Name</label>
                                    <input class="form-control" id="accountName" name="accountName" type="text">
                                    <br>

                                    <label for="accountBalance">Account Balance</label>
                                    <input class="form-control" id="accountBalance" name="accountBalance" type="number">
                                    <br>

                                </div>
                                <input type="hidden" id="user_id" name="user_id" value="{{ app.user.id }}">
                                <input type="hidden" id="account_id" name="account_id" value="">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="updateAccountModal">Update wallet</button>
                                <p align="center" id="sucessUpdate" style="display: none;">Successfully updated your account</p>
                                <p align="center" id="failUpdate" style="display: none;">There's been an issue, try again later</p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}