{% set title = 'Home' %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Controllet | Homepage</title>
        <!-- Font Awesome -->
        <style type="text/css">

            html,
            body,
            header,
            .carousel {
                height: 60vh;
            }

            @media (max-width: 740px) {
                html,
                body,
                header,
                .carousel {
                    height: 100vh;
                }
            }

            @media (min-width: 800px) and (max-width: 850px) {
                html,
                body,
                header,
                .carousel {
                    height: 100vh;
                }
            }

            @media (min-width: 800px) and (max-width: 850px) {
            }
        </style>
    </head>
    <body>

    <!--Main layout-->
    <main>
        <div class="container">

            <!--Section: Main info-->
            <section class="mt-5 wow fadeIn">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6 mb-4">

                        <img src="{{ asset('build/homepage_header.jpg') }}" class="img-fluid z-depth-1-half" alt="">

                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6 mb-4">

                        <!-- Main heading -->
                        <h3 class="h3 mb-3">Controllet | Expense Tracker</h3>
                        <p>Service that helps your track your daily and monthly expenses</p>
                        <p>Read more down below</p>
                        <!-- Main heading -->

                        <hr>

                        <br><br><br><br><br><br><br>
                        <!-- CTA -->
                        <a href="{{ path('app_login') }}" class="btn btn-indigo btn-md" style="background-color: #2bbbad !important; ">Login
                            <i class="far fa-user ml-1"></i>
                        </a>
                        <a href="{{ path('app_register') }}" class="btn btn-indigo btn-md" style="background-color: #2bbbad !important;">Register
                            <i class="far fa-user ml-1"></i>
                        </a>

                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

            </section>
            <!--Section: Main info-->

            <hr class="my-5">

            <div class="container">
                <div class="row">
                    <br/>
                    <div class="col text-center">
                        <h2>Our Statistics</h2>
                        <p>Usefull and fun service statistics</p>
                        <br>
                    </div>


                </div>
                <div class="row text-center">
                    <div class="col">
                        <div class="counter">
                            <i class="fa fa-user fa-2x"></i>
                            <h2 id="counter_users" data-to="100" data-speed="1500"></h2>
                            <p class="count-text">Users</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="counter">
                            <i class="fa fa-credit-card fa-2x"></i>
                            <h2 id="counter_transactions" data-to="1700" data-speed="1500"></h2>
                            <p class="count-text ">Transactions</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="counter">
                            <i class="fa fa-file-invoice fa-2x"></i>
                            <h2 id="counter_bills" data-to="11900" data-speed="1500"></h2>
                            <p class="count-text ">Bills</p>
                        </div></div>
                    <div class="col">
                        <div class="counter">
                            <i class="fas fa-university fa-2x"></i>
                            <h2 id="counter_accounts" data-to="157" data-speed="1500"></h2>
                            <p class="count-text ">Accounts</p>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-5">

            <!--Section: Main features & Quick Start-->
            <section>

                <h3 class="h3 text-center mb-5">About Controllet</h3>

                <!--Grid row-->
                <div class="row wow fadeIn">

                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12 px-4">

                        <!--First row-->
                        <div class="row">
                            <div class="col-1 mr-3">
                                <i class="fas fa-code fa-2x indigo-text"></i>
                            </div>
                            <div class="col-10">
                                <h5 class="feature-title">Technologies</h5>
                                <p class="grey-text">Built with latest technologies following latest standards</p>
                            </div>
                        </div>
                        <!--/First row-->

                        <div style="height:30px"></div>

                        <!--Second row-->
                        <div class="row">
                            <div class="col-1 mr-3">
                                <i class="fas fa-book fa-2x blue-text"></i>
                            </div>
                            <div class="col-10">
                                <h5 class="feature-title">Detailed documentation</h5>
                                <p class="grey-text">We give you detailed user-friendly documentation at your disposal.</p>
                            </div>
                        </div>
                        <!--/Second row-->

                        <div style="height:30px"></div>

                        <!--Third row-->
                        <div class="row">
                            <div class="col-1 mr-3">
                                <i class="fas fa-graduation-cap fa-2x cyan-text"></i>
                            </div>
                            <div class="col-10">
                                <h5 class="feature-title">Easy to use</h5>
                                <p class="grey-text">Our product is easy to use, quickly enter your expenses and track how your budget is holding up</p>
                            </div>
                        </div>
                        <!--/Third row-->

                    </div>
                    <!--/Grid column-->

                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12">
                        <img src="{{ asset('build/dashboard.png') }}" alt="" style=" width: 100%;">
                    </div>
                    <!--/Grid column-->
                </div>
                <!--/Grid row-->

            </section>
            <!--Section: Main features & Quick Start-->


            </section>
            <!--Section: Main info-->

            <hr class="my-5">

            <!--Section: Contact v.2-->
            <section class="mb-4">

                <!--Section heading-->
                <h2 class="h3 text-center mb-5">Contact us</h2>
                <!--Section description-->
                <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. Our 1 man team will come back to you within
                    a matter of hours to help you.</p>

                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-9 mb-md-0 mb-5">
                        <form id="contact-form" name="contact-form" method="POST">

                            <!--Grid row-->
                            <div class="row">

                                <!--Grid column-->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="text" id="name" name="name" class="form-control" required="required">
                                        <label for="name">Your name</label>
                                    </div>
                                </div>
                                <!--Grid column-->

                                <!--Grid column-->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="email" id="email" name="email" class="form-control" required="required">
                                        <label for="email">Your email</label>
                                    </div>
                                </div>
                                <!--Grid column-->

                            </div>
                            <!--Grid row-->

                            <!--Grid row-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="md-form mb-0">
                                        <input type="text" id="subject" name="subject" class="form-control" required="required">
                                        <label for="subject" class="">Subject</label>
                                    </div>
                                </div>
                            </div>
                            <!--Grid row-->

                            <!--Grid row-->
                            <div class="row">

                                <!--Grid column-->
                                <div class="col-md-12">

                                    <div class="md-form">
                                        <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" required="required"></textarea>
                                        <label for="message">Your message</label>
                                    </div>

                                </div>
                            </div>
                            <!--Grid row-->
                            <div class="text-center text-md-left">
                                <button class="btn btn-primary" id="submit_contact_form" type="submit">Send</button>
                            </div>
                        </form>
                        <div class="status"></div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-3 text-center">
                        <ul class="list-unstyled mb-0">
                            <li><i class="fas fa-map-marker-alt fa-2x"></i>
                                <p>Marka Oreskovica, Subotica</p>
                            </li>

                            <li><i class="fas fa-phone mt-4 fa-2x"></i>
                                <p>+ 381 064 654 546</p>
                            </li>

                            <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                                <p>controllet.service@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->

                </div>

            </section>
            <!--Section: Contact v.2-->

        </div>
    </main>
    <!--Main layout-->

    <!--Footer-->
    <footer class="page-footer text-center font-small mt-4 wow fadeIn">
        <!--Copyright-->
        <div class="footer-copyright py-3" style="background-color: #2bbbad !important; color: white;">
            Â© 2019 Copyright:
            <a href="#" target="_blank"> Controllet </a>
        </div>
        <!--/.Copyright-->

    </footer>
    <!--/.Footer-->
    </body>

    </html>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homepage') }}
    {{ encore_entry_script_tags('counter') }}
{% endblock %}