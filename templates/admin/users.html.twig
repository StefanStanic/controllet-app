{% set title = 'Users' %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{#    {{ encore_entry_link_tags('admin') }}#}
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 20px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Birth Date</th>
                <th scope="col">Active</th>
                <th scope="col">Ban</th>
                <th scope="col">Unban</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.dateOfBirth | date("d.m.Y")}}</td>
                <td>{{ user.active }}</td>
                <td>
                    <button class="btn btn-danger ban_user_{{ user.id }} ban_user" data-id="{{ user.id }}" >
                        <i class="fas fa-times-circle"></i>
                    </button>
                </td>
                <td>
                    <button class="btn btn-warning unban_user_{{ user.id }} unban_user" data-id="{{ user.id }}">
                        <i class="fas fa-check"></i>
                    </button>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user') }}
{% endblock %}